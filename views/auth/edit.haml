%form.form-signin{:action => "/users/#{@user.id}/edit", :method => "post"}
  %input.input-block-level{:id => "user_email", :name => "user[email]", :size => 30, :type => "text" , :value => @user.email}
  %input.input-block-level{:id => "user_password", :name => "user[password]", :size => 30, :type => "password" , :placeholder =>  t.auth.user.new_password}
  %input.input-block-level{:id => "user_password", :name => "user[password_confirmation]", :size => 30, :type => "password" , :placeholder =>  t.auth.user.password_confirmation}
  %button.btn.btn-large.btn-primary{:type => "submit"}= t.auth.user.edit
