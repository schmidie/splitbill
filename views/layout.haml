!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Splitbill
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "/css/splitbill.css", :rel => "stylesheet"}/

  %body
    .navbar.navbar-inverse
      .navbar-inner
        .container
          %a.brand{:href => '/'} Splitbill
          %ul.nav
            - r18n.available_locales.each do |locale|
              %li
                %a( href="?locale=#{locale.code}" )= locale.code
          %ul.nav.pull-right
            - if logged_in?
              %li
                %a{ :href=>'/users/' + current_user.id + '/edit' }= current_user.email
              %li
                %a{ :href=>'/logout' }= t.auth.logout.text
            - else
              %li
                %a{ :href=>'/signup' }= t.auth.signup.text
    .container
      .row
        - if flash[:notice]
          .alert.alert-info= flash[:notice]
        - if flash[:error]
          .alert.alert-error= flash[:error]
      =yield
    %hr
    %footer
        
