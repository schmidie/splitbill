%form.form-signin{:action => "/login", :method => "post"}
  %h2.page_title Login
  %input.input-block-level{:id => "user_email", :name => "email", :size => 30, :type => "text" , :placeholder => "E-Mail"}
  %input.input-block-level{:id => "user_password", :name => "password", :size => 30, :type => "password" , :placeholder => "Password"}
  %button.btn.btn-large.btn-primary{:type => "submit"} Login
     