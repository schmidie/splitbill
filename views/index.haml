.row
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th= t.event.name
        %th= t.event.location
        %th= t.event.date
    %tbody        
    - @events.each do |event|
      %tr
        %td
          %a{:href => "/events/" + event._id}= event.name
        %td
          = event.location
        %td
          = l event.date, :human
  .well
    %form{:action=>"/create", :method=>"post"}
      %legend Create a new Event
      %fieldset
        = input(:event,:name, :placeholder => "Name")
        = input(:event,:location, :placeholder => "Location")
        = input(:event,:date, :placeholder => "Date")
      %button.btn.btn-primary{:type => "submit"} Create Event
     