%form.form-signin{:action => "/signup", :method => "post"}
  %h2.page_title Sign Up
  %input.input-block-level{:id => "user_email", :name => "user[email]", :size => 30, :type => "text" , :placeholder => "E-Mail"}
  %input.input-block-level{:id => "user_password", :name => "user[password]", :size => 30, :type => "password" , :placeholder => "Password"}
  %input.input-block-level{:id => "user_password", :name => "user[password_confirmation]", :size => 30, :type => "password" , :placeholder => "Password confirmation"}
  %button.btn.btn-large.btn-primary{:type => "submit"} Sign up
  %a.btn.btn-large{:href => "/login"} Login
 